<div class="session_new_box">
  <div class="session_new_box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1>ログイン</h1>
      <div class="session_new_box-email">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="session_new_box-password">
        <div class="session_new_a-row">
          <div class="session_new_column-left">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="session_new_column-right">
            <%= link_to "パスワードを忘れた場合", new_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="session_new_box-login">
        <%= f.submit "ログイン" %>
        <% if devise_mapping.rememberable? %>
          <div class="session_new_remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember, "ログインしたままにする" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="session_new_box-newusr">
      <%= link_to "アカウントを作成", new_user_registration_path %>
    </div>
  </div>
</div>
