<div class="session_new_box">
  
  <div class="session_new_box-inner">
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h4>[<%= I18n.t('views.labels.link_menu_app_name') %>]</h4><br>
      <h4><%= I18n.t('devise.sessions.new.sign_in') %></h4>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="session_new_box-email">
        <%= f.label :email, I18n.t('activerecord.attributes.user.email') %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="session_new_box-password">
        <div class="session_new_a-row">
          <div class="session_new_column-left">
            <%= f.label :password, I18n.t('activerecord.attributes.user.password') %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="session_new_box-login">
        <%= f.submit I18n.t('devise.sessions.new.sign_in'), class: "btn btn-info", id: "user_login_submit" %>
        <% if devise_mapping.rememberable? %>
          <div class="session_new_remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember, I18n.t('activerecord.attributes.user.remember_me') %>
          </div>
        <% end %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>
