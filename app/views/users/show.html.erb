<div class="row">
  <div class="col-md-12">

    <div class="card">
      <div class="card-body">

        <div class="row">  
          <div class="col-md-12">
            <div>
              <h1>
                <!--<i class="fa fa-smile-o fa-2x" aria-hidden="true"></i>-->
                <!--<i class="fa fa-user-circle-o fa-2x" aria-hidden="true"></i>-->
                <%= I18n.t('views.labels.user_show_top') %>
              </h1>
              <%= image_tag default_img(@user.icon_url), size: '120x120', class: 'img' %><br>
              <h5 class="mt-2"><%= @user.name %>&nbsp;&lt;<%= @user.email %>&gt;</h5>
            </div>
            <% unless current_user.guest? %>
              <%= link_to I18n.t('views.messages.edit_profile') , edit_user_path, class: 'btn btn-sm btn-info mt-3' %>
            <% end %>
          </div>
        </div>

        <div class="row">  
          <div class="col-md-12">
         
            <div class="mt-4">
         
              <h5>
                <i class="fa fa-users" aria-hidden="true"></i>
                <%= I18n.t('views.messages.team_you_belong_to') %>
              </h5>
              <table class="table">
                <tbody>
                  <% @user.teams.each do |team| %>
                    <tr>
                      <td><%= image_tag default_img(team.icon_url), size: '40x40' %></td>
                      <td><%= team.name %></td>
                      <td><%= link_to I18n.t('views.messages.select_team'), team %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

          </div>
        </div>
      
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
  <!-- ./col -->
</div>
